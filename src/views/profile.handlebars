<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title text-center">Mi Perfil</h5>
          <div class="text-center">
            <div class="position-relative d-inline-block" style="width: 150px; height: 150px;">
               {{#if user.profileImage}}
                <img id="fotoPerfil" src="{{user.profileImage}}" alt="Foto de perfil" class="rounded-circle img-fluid" style="width: 100%; height: 100%;">
               {{else}}
                <img id="fotoPerfil" src="" alt="Foto de perfil" class="rounded-circle img-fluid" style="width: 100%; height: 100%; display: none;">
                  <div id="fotoPlaceholder" class="position-absolute top-0 start-0 rounded-circle" style="width: 100%; height: 100%; background-color: #f0f0f0; display: flex; justify-content: center; align-items: center;">
                    <span style="width: 100%; height: 100%; display: flex; justify-content: center; align-items: center;">Sin Foto</span>
                  </div>
               {{/if}}
            </div>
          </div>
          <div class="text-center mt-3" id="btnsubir">
            <label for="inputFoto" class="btn btn-warning btn-sm">
              <i class="bi bi-camera"></i> <span>Foto</span>
            </label>
            <input id="inputFoto" type="file" style="display: none;" onchange="mostrarFoto(this)">
          </div>
           <div class="text-center mt-3" id="btneliminar" style="display: none;">
           <button class="btn btn-danger btn-sm mt-2" onclick="eliminarFoto()" id="botonEliminarFoto">
              <i class="bi bi-trash"></i><span>Foto</span>
            </button>
           </div>
          <div class="row mt-4">
            <div class="col-md-6">
              <div class="form-group">
                <label>Nombres</label>
                <p class="form-control">{{user.first_name}}</p>
              </div>
              <div class="form-group">
                <label>Correo</label>
                <p class="form-control">{{user.email}}</p>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Apellidos</label>
                <p class="form-control">{{user.last_name}}</p>
              </div>
              <div class="form-group">
                <label>Rol</label>
                <p class="form-control">{{user.role}}</p>
              </div>
            </div>
            <div class="col-md-12">
                <div class="card">
                  <div class="card-body">
                    {{#if user.documents}}
                    <div class="alert alert-info d-flex align-items-center" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>
                      <div>
                        Documentación cargada correctamente de usuario.
                      </div>
                    </div>
                    {{else}}
                      <h6 class="card-title text-center">Adjuntar Documentos</h6>
                      <form onsubmit="enviarArchivosAlServidor(); return false;">
                        <div class="mb-3">
                          <label for="tipoArchivo" class="form-label">Tipo Documento</label>
                          <select class="form-select" id="tipoArchivo">
                          <option value="" selected>Seleccionar Tipo Documento</option>
                          <option value="Doc_Identificacion">Documento Identidad</option>
                          <option value="ComprobanteDomicilio">Comprobante de domicilio</option>
                          <option value="ComprobanteEstadoCuenta">Comprobante de estado de cuenta</option>
                        </select>
                        </div>
                        <div class="mb-3">
                          <label for="inputArchivo" class="btn btn-primary">
                          <i class="bi bi-upload"></i> Seleccionar Archivo
                          </label>
                          <input type="file" class="form-control" id="inputArchivo" multiple style="display: none;" onchange="renombrarYMostrarArchivos()">

                        </div>
                        <div id="listaArchivos" class="mb-3"></div>
                      </form>
                    {{/if}}
                    
                  </div>
                </div>
            </div>
          </div>
          <div class="text-center mt-4">
            {{#if user.documents}}
             <a  class="btn btn-success" href="/home">Atrás</a>
            {{else}}
            <a  class="btn btn-success" id="btnAtras" href="/home">Atrás</a>
            <button type="button" class="btn btn-warning" onclick="actualizar()">Actualizar - Usuario</button>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/upload-doc.js"></script>