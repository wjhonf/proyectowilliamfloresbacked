<div class="container mt-5">
    {{#if error}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert" id="errorAlert">
        <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <div>
                <strong>Error:</strong> {{error}}
            </div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/if}}

    <h6 class="text-center mb-4">Nuestros Productos</h6>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="../img/equipo1.jpg" class="card-img-top" alt="Laptop de Última Generación">
                <div class="card-body d-flex flex-column">
                    <h6 class="card-title">Laptop de Última Generación</h6>
                    <p class="card-text flex-grow-1">Potencia y rendimiento en un solo dispositivo.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="../img/equipo2.jpg" class="card-img-top" alt="PC de Escritorio Gamer">
                <div class="card-body d-flex flex-column">
                    <h6 class="card-title">PC de Escritorio Gamer</h6>
                    <p class="card-text flex-grow-1">Experimenta juegos de alta calidad con nuestro equipo gamer.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="../img/equipo6.jpg" class="card-img-top" alt="Accesorios Esenciales">
                <div class="card-body d-flex flex-column">
                    <h6 class="card-title">Accesorios Esenciales</h6>
                    <p class="card-text flex-grow-1">Encuentra los accesorios perfectos para complementar tu equipo.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    const errorAlert = document.getElementById('errorAlert');
    setTimeout(() => {
        errorAlert.classList.add('fade');
        setTimeout(() => {
            errorAlert.remove();
        }, 1000);
    }, 3000);
</script>